general {
        colors = true
        interval = 5
}

order += "ethernet _first_"
order += "load"
order += "cpu_usage"
order += "tztime local"

ethernet _first_ {
        format_up = "E: %speed"
        format_down = "E: down"
}

load {
	format = "%5min"
}

cpu_usage {
        format = "%usage"
}

tztime local {
        format = "%d/%m/%Y %H:%M"
}